<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/the_fingerprint_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dip"/>

    <TextView
        android:id="@+id/the_fingerprint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fingerprint unlock"
        app:layout_constraintLeft_toRightOf="@id/the_fingerprint_check_box"
        android:padding="10dip"/>

    <Button
        android:id="@+id/fingerprint_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/the_fingerprint_tv"
        android:text="test"/>

</android.support.constraint.ConstraintLayout>
